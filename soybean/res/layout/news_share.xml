<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white" >
	    <TextView
	         android:id="@+id/tvShareTo"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_marginTop="5dp"
	         android:layout_alignParentTop="true"
	         android:layout_centerHorizontal="true"
	         android:text="分享内容"
	         android:textColor="@color/LightGreyIos"
	         android:textSize="14sp" />

	     <LinearLayout
	           android:layout_width="match_parent"
	           android:layout_height="wrap_content"
	           android:layout_marginTop="10dp"
	           android:paddingBottom="10dp"
	           android:layout_below="@+id/tvShareTo"
	           android:orientation="horizontal" >
	           	           
	          <ImageView
			         android:id="@+id/ivWechatcomment"
			         android:layout_width="wrap_content"
			         android:layout_height="wrap_content"
			         android:scaleType="fitCenter"
			         android:src="@drawable/logo_wechatmoments"
			         android:onClick="onClick"
			         android:contentDescription="ivWechatcomment"
			         android:layout_gravity="center_vertical"
			         android:layout_weight="1.0" />

	           <ImageView
			         android:id="@+id/ivWechat"
			         android:layout_width="wrap_content"
			         android:layout_height="wrap_content"
			         android:onClick="onClick"
			         android:src="@drawable/logo_wechat"
			         android:scaleType="fitCenter"
			         android:contentDescription="ivWechat"
			         android:layout_gravity="center_vertical"
			         android:layout_weight="1.0" />
	           
			  <ImageView
			      android:id="@+id/ivSinaWeiBo"
			      android:layout_width="wrap_content"
			      android:layout_height="wrap_content"
			      android:layout_gravity="center_vertical"
			      android:layout_weight="1.0"
			      android:contentDescription="ivSinaWeiBo"
			      android:onClick="onClick"
			      android:scaleType="fitCenter"
			      android:src="@drawable/logo_sinaweibo" />
	          
	           <ImageView
			         android:id="@+id/ivQzone"
			         android:layout_width="wrap_content"
			         android:layout_height="wrap_content"
			         android:scaleType="fitCenter" 
			         android:src="@drawable/qq_zone"
			         android:onClick="onClick"
			         android:contentDescription="ivQzone"
			         android:layout_gravity="center_vertical"
			         android:layout_weight="1.0" />
	       </LinearLayout>
</RelativeLayout>